
@{
    ViewData["Title"] = "forgetpassword";
}

@section authcss {
    <link href="~/css/global.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/auth.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

}




<section class="authlogin">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="authlogin-image">
                    <img src="~/img/forgetpassword/forget.png" />
                </div>
            </div>

            <div class="col-4">
                <div class="logindetails-main-wrapper">
                    <div class="logintitle">
                        <h2 class="logintitle-heading2">
                            Hello!
                        </h2>
                        <p><span class="spanlogin"> Welcome to Our site</span></p>
                    </div>

                    <div class="logindetails">
                        <h3 class="loginheading3"><span class="spanlogin">Forget</span> Your Password</h3>
                    </div>

                    

                    <div class="loginusername">
                        <input type="text" placeholder="Email Address" class="inputlogin" />
                    </div>


                   
                    <div class="loginsubmit">
                        <button type="submit">Reset Password</button>
                    </div>


                    <div class="loginremember">

                        <p><a href="~/auth/login">back to login?</a></p>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>