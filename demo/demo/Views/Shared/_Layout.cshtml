<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - demo</title>
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/demo.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("head", required: false)
    @await RenderSectionAsync("globalcss", required: false)
    @await RenderSectionAsync("authcss", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 custom-nav-background">
            <div class="container-fluid">
                <div class="col-3">
                <div class="logo">
                    <a href="~/home/index">
                            <img src="~/img/icons/logo.png" alt="logo" />
                        </a>m 
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                </div>
                <div class="col-7">
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About us</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Services</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Portfolio</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Contact us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark loginlink" asp-area="" asp-controller="Auth" asp-action="login">Login</a>
                            </li>
                    </ul>
                </div>
                </div>
            </div>
        </nav>
    </header>

            @RenderBody()


    <footer class="border-top footer text-muted footer-custom">
        <div class="container">
            <div class="row">
           <div class="col-4">
                <div cite="footer-first">
                    <div class="logo-footer">
                        <img src="~/img/icons/logo.png"  alt="footer-logo"/>
                    </div>
                </div>
           </div>

                <div class="col-4">

                </div>


                <div class="col-4">

                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
